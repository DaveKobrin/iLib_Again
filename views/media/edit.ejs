<%- include ('partials/head.ejs') %> 

<form action="/logs/<%= entry.id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= entry.title %>"/>
    <label for="entry">Entry</label>
    <input type="textarea" name="entry" id="entry" value="<%= entry.entry %>"/>
    <label for="shipIsBroken">Ship Broken</label>
    <input type="checkbox" name="shipIsBroken" id="shipIsBroken" <% if (entry.shipIsBroken) { %> checked <% } %>/>
    <input type="submit" value="Submit"/>
</form>

